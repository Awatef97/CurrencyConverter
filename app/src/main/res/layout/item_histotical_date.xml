<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="date"
            type="String" />
    </data>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@{date}"
        android:textStyle="bold" />
</layout>
